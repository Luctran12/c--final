@page "/addstaff"
@inherits AddStaffBase
@rendermode InteractiveServer

<h3>Add New Staff</h3>
<form="@staff" method="post">

    

    <div class="form-group">
        <label for="FirstName">First Name</label>
        <InputText id="FirstName" class="form-control" @bind-Value="staff.FirstName" />
    </div>

<div class="form-group">
        <label for="EmployeeId">ID</label>
        <InputNumber id="LastName" class="form-control" @bind-Value="staff.EmployeeId" />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        <InputText id="LastName" class="form-control" @bind-Value="staff.LastName" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <InputText id="Email" class="form-control" @bind-Value="staff.Email" />
    </div>

    <div class="form-group">
        <label for="DateofBirth">Starting Date</label>
        <InputDate id="DateofBirth" class="form-control" @bind-Value="staff.StartingDate" />
    </div>

    <div class="form-group">
        <label for="DepartmentId">Department</label>
        <InputNumber id="DepartmentId" class="form-control" @bind-Value="staff.DepartmentId" />
    </div>

    <div class="form-group">
        <label for="GenderId">Gender</label>
        <InputNumber id="GenderId" class="form-control" @bind-Value="staff.GenderId" />
    </div>

    <button type="submit" class="btn btn-primary" onclick="@submit">Add Staff</button>
    </form>